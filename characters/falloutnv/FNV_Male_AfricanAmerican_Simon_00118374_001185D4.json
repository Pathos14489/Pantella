    {
      "topic": "VFSSimonSearchDone",
      "topic_text": "VFSSimonSearchDone",
      "emotion": "Neutral 50",
      "response_text": "There, I've stowed all of your weapons. You're clear to enter. When you leave, I'll hand them all back to you.",
      "index": "16"
    },
    {
      "topic": "VMS29aVFSSimonTopic000",
      "topic_text": "Okay, search away.",
      "emotion": "Neutral 50",
      "response_text": "This should only take a moment.",
      "index": "17"
    },
    {
      "topic": "VMS29aVFSSimonTopic001",
      "topic_text": "That's not going to happen.",
      "emotion": "Neutral 50",
      "response_text": "Then you're not going to shop here.",
      "index": "18"
    },
    {
      "topic": "VMS29aVFSVanGraffThug09Topic000",
      "topic_text": "That's right.",
      "emotion": "Neutral 50",
